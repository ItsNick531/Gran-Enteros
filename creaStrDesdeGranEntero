#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char *creaStrDesdeGranEntero(GranEntero *numero) {
    if (numero == NULL || numero->inicio == NULL) return NULL;

    int len = numero->cantidad + 1; // +1 por '\0'
    if (numero->signo == -1)
        len++; // espacio para el '-'

    char *str = (char*)malloc(len * sizeof(char));
    if (str == NULL) return NULL;

    char *ptr = str;

    // Agregar signo si es negativo
    if (numero->signo == -1) {
        *ptr++ = '-';
    }

    // Recorrer lista y escribir los dÃ­gitos
    Nodo *actual = numero->inicio;
    while (actual != NULL) {
        *ptr++ = actual->digito + '0';
        actual = actual->sig;
    }

    *ptr = '\0'; // Fin del string

    return str;
}
